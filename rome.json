{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"files": {
		"ignore": [
			"dist/**/*",
			"node_modules/**/*"
		]
	},
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": false,
		"ignore": [
			"src/assembly/extension/assemble.ts"
		],
		"indentStyle": "tab",
		"lineWidth": 200
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noDoubleEquals": "off",
				"noExplicitAny": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"noInferrableTypes": "off",
				"useConst": "off",
				"useTemplate": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"quoteProperties": "asNeeded",
			"trailingComma": "es5",
			"semicolons": "asNeeded"
		}
	}
}
